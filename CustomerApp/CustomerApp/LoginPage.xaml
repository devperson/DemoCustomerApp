<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Login"
             x:Class="CustomerApp.LoginPage">
  <StackLayout VerticalOptions="Center" Padding="20" Spacing="20">
    <ContentView x:Name="errorMsg" Padding="20" IsVisible="False">
      <Label Text="User name or password is incorrect." TextColor="Red"></Label>
    </ContentView>
    
    <Entry Text="{Binding UserName}" Placeholder="User name"/>
    <Entry  Text="{Binding Password}" Placeholder="Password"/>

    <Button Text="Login" Clicked="Submit_Clicked" BackgroundColor="Green" TextColor="White"></Button>
  </StackLayout>
</ContentPage>